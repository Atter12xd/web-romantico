---
// Importamos las utilidades necesarias
import { formatDate } from "../utils/data.util";
import Tags from "./Tags.astro";
interface Props {
  post: any;
}

const { post } = Astro.props;
---

<a href={post?.url || "#"}>
  <div
    class="my-4 rounded-2xl bg-gray-100 border-4 border-purple-500 text-sm
  hover:bg-gray-300 hover:border-purple-600
  dark:bg-gray-600 dark:border-purple-500 dark:hover:border-purple-300"
  >
    <div
      class="flex h-full w-full
        flex-col
    rounded-2xl
        p-4
        text-gray-900
    dark:bg-gray-800
        dark:text-white"
    >
      <div class="flex-auto">
        <div class="flex justify-between pb-4 text-xs">
          <p>{post?.frontmatter?.pubDate ? formatDate(post.frontmatter.pubDate) : "Fecha no disponible"}</p>
          <p>{post?.frontmatter?.minutesRead || "Tiempo no disponible"}</p>
        </div>

        <p class="pb-4 text-lg font-bold">{post?.frontmatter?.title || "Título no disponible"}</p>

        {post?.frontmatter?.tags && <Tags tags={post.frontmatter.tags} />}
        <p class="line-clamp-6 pt-4">{post?.frontmatter?.excerpt || "Descripción no disponible"}</p>
      </div>
      <p class="pt-4 underline">Ir a ver más sobre la meta</p>
    </div>
  </div>
</a>