---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Tags from "../../components/Tags.astro";
import { getEntry } from "astro:content";
import { formatDate } from "../../utils";
import ArticleCard from "../../components/ArticleCard.astro";

const { slug } = Astro.params;

if (slug === undefined) {
  throw new Error("Slug is required");
}

const entry = await getEntry("blog", slug);

if (entry === undefined) {
  return Astro.redirect("/404");
}

const { Content } = await entry.render();
---

<BaseLayout>
  <section class="bg-gray-900">
    <div class="px-4 py-8 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
      <article>
        <h1 class="text-gray-300 text-4xl font-bold mb-2">
          {entry.data.title}
        </h1>
        <h3 class="text-gray-300 text-lg mb-2">
          Written by {entry.data.author} on {formatDate(entry.data.pubDate)}
        </h3>
        <Tags tags={entry.data.tags} />
        <img
          src={"/images/" + entry.data.image}
          alt="Article Image"
          class="w-full h-auto rounded-xl my-6"
        />
        <Content />
      </article>
    </div>
  </section>
</BaseLayout>

<style is:global>
  p {
    margin: 20px 0;
    color: white;
  }

  h2 {
    margin: 20px 0;
    font-size: 1.8rem;
    color: white;
  }
</style>
