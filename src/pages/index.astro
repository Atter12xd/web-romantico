---
import BaseLayout from "../layouts/BaseLayout.astro";
const currentYear = new Date().getFullYear();
---

<BaseLayout>
  <!-- Hero section -->
  <section class="bg-gray-900 py-8 sm:py-12 lg:py-16">
    <div class="my-auto mx-auto max-w-screen-xl px-4 text-center">
      <!-- Profile photo -->
      <div class="flex justify-center mb-8 sm:my-8 md:my-12">
        <img
          src="/src/images/images.avif"
          alt="Profile"
          class="rounded-full w-32 h-32 object-cover border-4 border-purple-500"
        />
      </div>
      <h1
        class="mb-4 text-4xl font-extrabold tracking-tight leading-none text-gray-200 md:text-5xl lg:text-6xl"
      >
        Hello World!ðŸ––
      </h1>
      <p
        class="mb-8 text-lg font-normal text-gray-300 lg:text-xl sm:px-16 lg:px-48"
      >
        Welcome to my blog site! Here, I share my thoughts on technology,
        innovation, and personal growth. Join me on this exciting journey as we
        explore the digital landscape together.
      </p>
      <!-- CTA -->
      <div
        class="flex flex-col space-y-4 sm:flex-row sm:justify-center sm:space-y-0 sm:mb-8 md:mb-12"
      >
        <a
          href="#"
          class="inline-flex justify-center items-center py-3 px-5 mr-4 text-base font-bold text-center text-purple-500 rounded-full bg-gray-900 focus:ring-4 focus:ring-purple-300 border-4 border-purple-500 hover:text-purple-800 hover:border-purple-800 transition-colors duration-300"
        >
          Download
          <svg
            class="w-3.5 h-3.5 ms-2"
            aria-hidden="true"
            xmlns="http://www.w3.org/2000/svg"
            fill="none"
            viewBox="0 0 16 18"
          >
            <path
              stroke="currentColor"
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M8 1v11m0 0 4-4m-4 4L4 8m11 4v3a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2v-3"
            ></path>
          </svg>
        </a>
        <a
          href="#"
          class="inline-flex justify-center items-center py-3 px-5 text-base font-bold text-gray-900 focus:outline-none bg-purple-500 rounded-full hover:bg-purple-700 focus:z-10 transition-colors duration-300"
        >
          Let's Connect!
        </a>
      </div>
    </div>
  </section>
  <!-- Features section -->
  <section class="bg-purple-500">
    <div class="py-8 px-4 mx-auto max-w-screen-xl sm:py-16 lg:px-6">
      <div class="max-w-screen-md mx-auto mb-8 lg:mb-16 text-center">
        <h2 class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900">
          We build modern Astro sites
        </h2>
      </div>
      <!-- Features grid -->
      <div
        class="space-y-8 md:grid md:grid-cols-2 lg:grid-cols-3 md:gap-12 md:space-y-0 max-w-4xl mx-auto"
      >
        <div>
          <div
            class="flex justify-center items-center mb-4 w-10 h-10 rounded-full lg:h-12 lg:w-12"
          >
            <svg
              class="w-5 h-5 text-primary-600 lg:w-6 lg:h-6 dark:text-primary-300"
              fill="currentColor"
              viewBox="0 0 20 20"
              xmlns="http://www.w3.org/2000/svg"
              ><path
                fill-rule="evenodd"
                d="M3 3a1 1 0 000 2v8a2 2 0 002 2h2.586l-1.293 1.293a1 1 0 101.414 1.414L10 15.414l2.293 2.293a1 1 0 001.414-1.414L12.414 15H15a2 2 0 002-2V5a1 1 0 100-2H3zm11.707 4.707a1 1 0 00-1.414-1.414L10 9.586 8.707 8.293a1 1 0 00-1.414 0l-2 2a1 1 0 101.414 1.414L8 10.414l1.293 1.293a1 1 0 001.414 0l4-4z"
                clip-rule="evenodd"></path></svg
            >
          </div>
          <h3 class="mb-2 text-xl font-bold">Powered by NotionCMS</h3>
          <p class="text-gray-900">
            Blog from the comfort of your personal Notion workspace.
          </p>
        </div>
        <div>
          <div
            class="flex justify-center items-center mb-4 w-10 h-10 rounded-full lg:h-12 lg:w-12"
          >
            <svg
              class="w-5 h-5 text-primary-600 lg:w-6 lg:h-6 dark:text-primary-300"
              fill="currentColor"
              viewBox="0 0 20 20"
              xmlns="http://www.w3.org/2000/svg"
              ><path
                fill-rule="evenodd"
                d="M3 3a1 1 0 000 2v8a2 2 0 002 2h2.586l-1.293 1.293a1 1 0 101.414 1.414L10 15.414l2.293 2.293a1 1 0 001.414-1.414L12.414 15H15a2 2 0 002-2V5a1 1 0 100-2H3zm11.707 4.707a1 1 0 00-1.414-1.414L10 9.586 8.707 8.293a1 1 0 00-1.414 0l-2 2a1 1 0 101.414 1.414L8 10.414l1.293 1.293a1 1 0 001.414 0l4-4z"
                clip-rule="evenodd"></path></svg
            >
          </div>
          <h3 class="mb-2 text-xl font-bold">Powered by NotionCMS</h3>
          <p class="text-gray-900">
            Blog from the comfort of your personal Notion workspace.
          </p>
        </div>
        <div>
          <div
            class="flex justify-center items-center mb-4 w-10 h-10 rounded-full lg:h-12 lg:w-12"
          >
            <svg
              class="w-5 h-5 text-primary-600 lg:w-6 lg:h-6 dark:text-primary-300"
              fill="currentColor"
              viewBox="0 0 20 20"
              xmlns="http://www.w3.org/2000/svg"
              ><path
                fill-rule="evenodd"
                d="M3 3a1 1 0 000 2v8a2 2 0 002 2h2.586l-1.293 1.293a1 1 0 101.414 1.414L10 15.414l2.293 2.293a1 1 0 001.414-1.414L12.414 15H15a2 2 0 002-2V5a1 1 0 100-2H3zm11.707 4.707a1 1 0 00-1.414-1.414L10 9.586 8.707 8.293a1 1 0 00-1.414 0l-2 2a1 1 0 101.414 1.414L8 10.414l1.293 1.293a1 1 0 001.414 0l4-4z"
                clip-rule="evenodd"></path></svg
            >
          </div>
          <h3 class="mb-2 text-xl font-bold">Powered by NotionCMS</h3>
          <p class="text-gray-900">
            Blog from the comfort of your personal Notion workspace.
          </p>
        </div>
      </div>
    </div>
  </section>
  <!-- Featured post section -->
  <section class="bg-gray-900">
    <div class="px-4 py-8 mx-auto max-w-screen-xl lg:py-16 lg:px-6">
      <div class="mx-auto max-w-screen-sm text-center lg:mb-16 mb-8">
        <h2
          class="mb-4 text-3xl lg:text-4xl tracking-tight font-extrabold text-gray-300"
        >
          Featured Post
        </h2>
        <p class="font-light text-gray-300 sm:text-xl">
          Discover our latest featured post, showcasing cutting-edge insights
          and practical tips. Stay informed and inspired with our carefully
          curated content.
        </p>
        <a
          href="/blog"
          class="inline-flex justify-center items-center py-4 px-5 mt-4 mr-4 text-base font-bold text-center text-purple-500 rounded-full bg-gray-900 focus:ring-4 focus:ring-purple-300 border-4 border-purple-500 hover:text-purple-800 hover:border-purple-800 transition-colors duration-300"
        >
          See All Posts
        </a>
      </div>
      <div class="grid gap-8 lg:grid-cols-2">
        <article
          class="p-6 bg-gray-300 rounded-lg border border-gray-200 shadow-md hover:bg-gray-200"
        >
          <div class="flex justify-between items-center mb-5 text-gray-500">
            <span
              class="bg-primary-100 text-primary-800 text-xs font-medium inline-flex items-center px-2.5 py-0.5 rounded dark:bg-primary-200 dark:text-primary-800"
            >
              <svg
                class="mr-1 w-3 h-3"
                fill="currentColor"
                viewBox="0 0 20 20"
                xmlns="http://www.w3.org/2000/svg"
                ><path
                  d="M2 6a2 2 0 012-2h6a2 2 0 012 2v8a2 2 0 002 2H4a2 2 0 01-2-2V6zM14.553 7.106A1 1 0 0014 8v4a1 1 0 00.553.894l2 1A1 1 0 0018 13V7a1 1 0 00-1.447-.894l-2 1z"
                ></path></svg
              >
              Tutorial
            </span>
            <span class="text-sm">14 days ago</span>
          </div>
          <h2
            class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"
          >
            <a href="#">How to quickly deploy a static website</a>
          </h2>
          <p class="mb-5 font-light text-gray-500 dark:text-gray-400">
            Static websites are now used to bootstrap lots of websites and are
            becoming the basis for a variety of tools that even influence both
            web designers and developers influence both web designers and
            developers.
          </p>
          <div class="flex justify-between items-center">
            <div class="flex items-center space-x-4">
              <img
                class="w-7 h-7 rounded-full"
                src="https://flowbite.s3.amazonaws.com/blocks/marketing-ui/avatars/jese-leos.png"
                alt="Jese Leos avatar"
              />
              <span class="font-medium dark:text-white"> Jese Leos </span>
            </div>
            <a
              href="#"
              class="inline-flex items-center font-medium text-primary-600 dark:text-primary-500 hover:underline"
            >
              Read more
              <svg
                class="ml-2 w-4 h-4"
                fill="currentColor"
                viewBox="0 0 20 20"
                xmlns="http://www.w3.org/2000/svg"
                ><path
                  fill-rule="evenodd"
                  d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                  clip-rule="evenodd"></path></svg
              >
            </a>
          </div>
        </article>
        <article
          class="p-6 bg-gray-300 rounded-lg border border-gray-200 shadow-md hover:bg-gray-200"
        >
          <div class="flex justify-between items-center mb-5 text-gray-500">
            <span
              class="bg-primary-100 text-primary-800 text-xs font-medium inline-flex items-center px-2.5 py-0.5 rounded dark:bg-primary-200 dark:text-primary-800"
            >
              <svg
                class="mr-1 w-3 h-3"
                fill="currentColor"
                viewBox="0 0 20 20"
                xmlns="http://www.w3.org/2000/svg"
                ><path
                  fill-rule="evenodd"
                  d="M2 5a2 2 0 012-2h8a2 2 0 012 2v10a2 2 0 002 2H4a2 2 0 01-2-2V5zm3 1h6v4H5V6zm6 6H5v2h6v-2z"
                  clip-rule="evenodd"></path><path
                  d="M15 7h1a2 2 0 012 2v5.5a1.5 1.5 0 01-3 0V7z"></path></svg
              >
              Article
            </span>
            <span class="text-sm">14 days ago</span>
          </div>
          <h2
            class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"
          >
            <a href="#">Our first project with React</a>
          </h2>
          <p class="mb-5 font-light text-gray-500 dark:text-gray-400">
            Static websites are now used to bootstrap lots of websites and are
            becoming the basis for a variety of tools that even influence both
            web designers and developers influence both web designers and
            developers.
          </p>
          <div class="flex justify-between items-center">
            <div class="flex items-center space-x-4">
              <img
                class="w-7 h-7 rounded-full"
                src="https://flowbite.s3.amazonaws.com/blocks/marketing-ui/avatars/bonnie-green.png"
                alt="Bonnie Green avatar"
              />
              <span class="font-medium dark:text-white"> Bonnie Green </span>
            </div>
            <a
              href="#"
              class="inline-flex items-center font-medium text-primary-600 dark:text-primary-500 hover:underline"
            >
              Read more
              <svg
                class="ml-2 w-4 h-4"
                fill="currentColor"
                viewBox="0 0 20 20"
                xmlns="http://www.w3.org/2000/svg"
                ><path
                  fill-rule="evenodd"
                  d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                  clip-rule="evenodd"></path></svg
              >
            </a>
          </div>
        </article>
      </div>
    </div>
  </section>
  <!-- Contact section -->
  <section class="bg-gray-900 relative pt-12">
    <!-- Background pattern -->
    <div
      class="absolute inset-x-0 top-1/2 h-1/2 bg-purple-500 bg-opacity-70 transform -translate-y-1/2 overflow-hidden"
    >
    </div>
    <!-- Contact form -->
    <div
      class="container mx-auto py-8 lg:py-16 px-4 pb-24 lg:pb-32 flex justify-center items-center relative z-10"
    >
      <div class="relative max-w-5xl w-full">
        <!-- Image column -->
        <div
          class="hidden md:block md:w-3/5 bg-gray-500 rounded-lg aspect-[16/9] overflow-hidden"
        >
          <img
            src="/src/images/images.avif"
            alt="monitor-illustration"
            class="rounded-lg shadow-lg w-full h-full object-cover"
          />
        </div>
        <!-- Contact form column -->
        <div
          class="md:absolute md:top-1/2 md:right-[-15%] md:transform md:-translate-y-1/2 md:w-3/5 z-10"
        >
          <div class="bg-purple-900 p-8 rounded-lg shadow-lg max-w-md w-full">
            <h2
              class="mb-4 text-3xl tracking-tight font-extrabold text-center text-gray-300"
            >
              Let's Connect!
            </h2>
            <p class="mb-8 font-light text-center text-gray-300 sm:text-lg">
              Reach out below for any inquiries or to discuss potential
              collaborations.
            </p>
            <form action="#" class="space-y-6">
              <div>
                <label
                  for="first-name"
                  class="block mb-2 text-sm font-semibold text-purple-500"
                >
                  FIRST NAME
                </label>
                <input
                  type="text"
                  id="first-name"
                  class="block p-3 w-full text-sm font-medium text-purple-500 bg-purple-900 rounded-full border-4 border-gray-300 shadow-sm focus:ring-purple-500 focus:border-purple-500 placeholder-purple-500"
                  placeholder="e.g. Jon Snow"
                  required
                />
              </div>
              <div>
                <label
                  for="email"
                  class="block mb-2 text-sm font-semibold text-purple-500"
                >
                  YOUR EMAIL
                </label>
                <input
                  type="email"
                  id="email"
                  class="block p-3 w-full text-sm text-purple-500 bg-purple-900 rounded-full border-4 border-gray-300 shadow-sm focus:ring-purple-500 focus:border-purple-500 placeholder-purple-500"
                  placeholder="e.g. jon.snow@winterfell.com"
                  required
                />
              </div>
              <div class="flex justify-center">
                <button
                  type="submit"
                  class="py-3 px-5 text-sm font-semibold text-center text-gray-900 rounded-full border-4 border-purple-500 bg-purple-500 hover:bg-purple-800 hover:border-purple-500 focus:ring-4 focus:outline-none focus:ring-purple-500 transition-colors duration-300"
                >
                  Contact Me!
                </button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- Footer -->
  <footer class="bg-purple-900 w-full bottom-0 start-0">
    <div
      class="w-full mx-auto max-w-screen-xl p-4 md:flex md:items-center md:justify-between"
    >
      <span class="text-sm text-gray-300 sm:text-center"
        >Â© {currentYear}
        <a href="https://leifjerami.com" class="hover:underline">Jerami Tech</a
        >. All Rights Reserved.
      </span>
      <ul
        class="flex flex-wrap justify-center md:justify-end items-center text-sm font-medium text-gray-300"
      >
        <li>
          <a href="/about" class="hover:underline px-2 py-1">About</a>
        </li>
        <li>
          <a href="#" class="hover:underline px-2 py-1">Privacy Policy</a>
        </li>
        <li>
          <a href="#" class="hover:underline px-2 py-1">Licensing</a>
        </li>
        <li>
          <a href="#" class="hover:underline px-2 py-1">Contact</a>
        </li>
      </ul>
    </div>
  </footer>
</BaseLayout>
